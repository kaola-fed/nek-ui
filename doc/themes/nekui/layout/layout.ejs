<% var isIndex = page.path === 'index.html' %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%- page.title ? page.title + ' - ' : '' %><%- theme.title %></title>
        <meta charset="utf-8">
        <meta http-equiv="x-dns-prefetch-control" content="on" />
        <meta name="description" content="<%- theme.site_description %>">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <meta property="og:type" content="article">
        <meta property="og:title" content="<%- page.title ? page.title + ' - ' : '' %><%- theme.title %>">
        <meta property="og:description" content="<%- theme.site_description %>">
        <meta property="og:image" content="https://<%- theme.root_domain %>/images/logo.svg">

        <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

        <link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
        <link rel="dns-prefetch" href="//haitao.nos.netease.com" />
        <link rel="dns-prefetch" href="//at.alicdn.com" />

        <% if (isIndex) { %>
            <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.9.5/jquery.fullpage.min.css" />
        <% } %>

        <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600|Roboto Mono" rel='stylesheet' type='text/css'>
        <link href="//fonts.googleapis.com/css?family=Dosis:500&text=<%- theme.title %>" rel='stylesheet' type='text/css'>
        <link href="//at.alicdn.com/t/font_393438_fji5kllvfft21emi.css" rel="stylesheet" type="text/css" />
        <!--  nek-ui -->
        <link href="/nek-ui/css/nek-ui.default.css" rel='stylesheet' type='text/css'>
        <!-- main page styles -->
        <%- css(isIndex ? 'css/index.css?v2' : 'css/page.css?v2') %>
        <script>window.PAGE_TYPE = "<%- page.type %>"</script>
    </head>
    <body class="<%- isIndex ? '' : 'docs' -%>" <%if (isIndex) { %>id="homepage"<% } %>>
        <% if (!isIndex) { %>
            <script src="/nek-ui/js/common.js"></script>
            <script src="/nek-ui/vendor/regular.js"></script>
            <script src="/nek-ui/js/nek-ui.js"></script>
            <script src="/nek-ui/demo.wrap/index.js"></script>
        <% } %>
        <div id="mobile-bar" <%- isIndex ? 'class="top"' : '' %>>
            <a class="menu-button"></a>
            <a class="logo" href="/"></a>
        </div>
        <%- partial('partials/header', {isIndex: isIndex}) %>
        <% if (!isIndex) { %>
            <div id="main" class="fix-sidebar">
                <%- body %>
            </div>
        <% } else { %>
            <%- body %>
        <% } %>

        <% if (!isIndex) { %>
        <!-- main custom script for sidebars, version selects etc. -->
        <script src="/nek-ui/js/smooth-scroll.min.js"></script>
        <!-- fastclick -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.6/fastclick.min.js"></script>
        <script src="/nek-ui/js/scrollIntoView.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                FastClick.attach(document.body);

                scrollIntoView(document.querySelector('.sidebar .submenu a.current'), {
                    validTarget: function(target, parentsScrolled){
                        return parentsScrolled < 2 && target !== window && target.matches('.sidebar');
                    },
                });
            }, false)
        </script>
        <% } %>

        <!-- Hotjar Tracking Code for http://nek-ui.kaolafed.com/ -->
        <script>
            (function(h,o,t,j,a,r){
                h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
                h._hjSettings={hjid:608636,hjsv:5};
                a=o.getElementsByTagName('head')[0];
                r=o.createElement('script');r.async=1;
                r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
                a.appendChild(r);
            })(window,document,'//static.hotjar.com/c/hotjar-','.js?sv=');
        </script>

        <!-- ga -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '<%- theme.google_analytics %>', '<%- theme.root_domain %>');
            ga('send', 'pageview');
        </script>

        <!-- search -->
        <link href="//cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.css" rel='stylesheet' type='text/css'>
        <%- css('css/search') %>
        <script src="//cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.js"></script>
        <script>
            docsearch({
                apiKey: 'e5880dd54c730e68c9fcc610adb30f33',
                indexName: 'nek_ui',
                inputSelector: '#search-query-nav',
                debug: false
            })
        </script>
    </body>
</html>
