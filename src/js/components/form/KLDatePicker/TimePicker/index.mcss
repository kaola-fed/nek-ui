.u-timepicker {
	display: inline-block;
	.u-numberinput, .u-input {
	    width:auto;
	}
}

////////////////////

.u-timepicker {
    .u-input {
        width: 56px;
        padding: 6px;
    }
    .u-input {
        display: inline-block;
        box-sizing: content-box;
    }
    .u-numberinput {
        .u-btn  {
          top: 8px;
          margin: auto;
        }
        .u-btn + .u-btn {
          top: auto;
          bottom: 8px;
        }
    }
}