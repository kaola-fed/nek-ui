// Component:       `u-formitem`
// ========================================================================

.u-formitem {
    display: flex;
    margin-bottom: 10px;
    .formitem_tt {
        position:relative;
        float: left;
        padding-right: $size-base;
        font-size: $font-size-base;
        text-align: right;
        line-height: 1;
        max-width: $size-base * 18;

        &-sm { width: $size-base * 10; }
        &-md { width: $size-base * 18; }
        &-lg { width: $size-base * 22; max-width: $size-base * 22; }
        &-xlg { width: $size-base * 28; max-width: $size-base * 28; }

        &-lh-sm { line-height: 1; }
        &-lh-md { line-height: 1.3; }
        &-lh-lg { line-height: 2.5; }
    }
    .formitem_info {
        color: #ccc;
        vertical-align: middle;
    }

    .formitem_ct{
        /*line-height: 32px;*/
        flex: 1;
        font-size: $font-size-base;
    }

    .formitem_desc {
        display: inline-block;
        vertical-align: top;
        color: #999;
    }

    .g-col:first-child { padding-left:0; }
    .g-col:last-child { padding-right:0; }

    .formitem_rqr {
        color: #FF753F;
    }

    &-inline {
        display:inline-block;
        vertical-align:top;
        margin-bottom:0;

        .formitem_ct {
            display:inline-block;
        }
    }

    &-vertical {
        flex-direction: column;
        .formitem_tt {
            text-align: left!important;
            width: 100%;
            max-width: 100%;
        }
    }
}

.m-table .u-formitem {
    margin-bottom: 0;
}