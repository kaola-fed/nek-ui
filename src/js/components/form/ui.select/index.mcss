.u-select {
    $user-select: none;
    // - 防止select在文字为空时飘起来
    vertical-align: middle;

    .dropdown_hd {
        $box-sizing: border-box;
        cursor: pointer;
        @extend .f-toe;

        .u-icon {
            float: right;
            width: auto;
            line-height: inherit;
        }
    }

    .selected-tag {
        position: relative;
        padding: 0 20px 0 10px;
        margin: 6px 5px 0 0;
        background-color: #f3f3f3;
        $border-radius: $border-radius-base;
        height: 20px;
        line-height: 20px;
        float: left;
        cursor: default;
        .u-icon-remove{
            position: absolute;
            right: 5px;
        }
        &:last-child{
            margin-bottom: 6px;
        }
    }
    .u-search-input{
        padding: 0;
        border: none;
        font-family: inherit;
        line-height: 20px;
        width: calc(100% - 8px);
        background-color: transparent;
        &:focus{
            outline: none;
            border: none;
        }
    }
    &.isMultiple{
        .u-search-input{
            float: left;
            margin-top: 7px;
            width: 1em;
        }
    }

    .dropdown_bd {
        clear: both;
    }

    .m-listview {
        overflow-x: hidden;
        overflow-y: auto;
        padding: 0;
    }

    .m-treeview {
        overflow: auto;
    }
}

/* Disabled */
.u-select.z-dis {
    .dropdown_hd {
        cursor: not-allowed;
    }
}


//////////////////////////
.u-select {

    .dropdown_hd {
        min-height: $u-formctrl_height;
        line-height: $u-formctrl_height - 2;
        padding: 0 index($u-formctrl_padding, 1);
        background: $u-formctrl_background;
        color: $u-formctrl_color;
        $border: $u-formctrl_border;
        $border-radius: $border-radius-base;
        font-size: 12px;
    }

    .dropdown_hd:hover {}

    .m-listview, .m-treeview {
        max-height: 200px;
    }
}
.u-select-error .dropdown_hd { border-color: #d73925; }

/* Disabled */
.u-select.z-dis {
    .dropdown_hd {
        background: $u-formctrl-disabled_background;
        $border: $u-formctrl-disabled_border;
        color: $u-formctrl-disabled_color;
    }
}

.u-selectgroup {
    .u-select {
        width:160px;
    }
    .u-dropdown {
        display:inline-block;
    }
}

.u-select-sm {
    height: 24px;
    padding: 0;
    .dropdown_hd{
        min-height: 26px;
        line-height: 24px;
    }

    .m-listview >li{
        line-height: 12px;
    }
}